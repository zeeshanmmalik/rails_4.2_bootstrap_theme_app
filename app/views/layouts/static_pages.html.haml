!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "Ovation Experiential", :name => "author"}/
    %meta{:content => "FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina", :name => "keyword"}/
    = favicon_link_tag 'favicon.ico'
    %title= yield(:page_title)

    / Common Styles
    = stylesheet_link_tag    'application', 'static_pages', media: 'all',
                             'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'static_pages', 'data-turbolinks-track' => true
    = yield(:page_specific_scripts) if content_for?(:page_specific_scripts)
    = yield(:page_specific_styles) if content_for?(:page_specific_styles)

    / HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries
    /[if lt IE 9]
      = javascript_include_tag "html5shiv"
      = javascript_include_tag "respond.min"

    = csrf_meta_tags
  %body
    = render "layouts/static_pages_top_menu"
    = yield
    = render "layouts/static_pages_footer"
